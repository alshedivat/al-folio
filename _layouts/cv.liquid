---
layout: default
---
{% if site.data.cv.cv %}
  <!-- RenderCV format -->
  <div class="post">
    <header class="post-header">
      <h1 class="post-title">
        {{ page.title }}
        {% if page.cv_pdf %}
          <a
            {% if page.cv_pdf contains '://' %}
              href="{{ page.cv_pdf }}"
            {% else %}
              href="{{ page.cv_pdf | relative_url }}"
            {% endif %}
            target="_blank"
            rel="noopener noreferrer"
            class="float-right"
          >
            <i class="fa-solid fa-file-pdf"></i>
          </a>
        {% endif %}
      </h1>
      {% if page.description %}
        <p class="post-description">{{ page.description }}</p>
      {% endif %}
    </header>

    <article>
      <div class="cv">
        {% assign cv = site.data.cv.cv %}
        
        <!-- Header Information -->
        {% if cv.name or cv.location or cv.email %}
          <div class="card mt-3 p-3">
            <h3 class="card-title font-weight-medium">Contact Information</h3>
            <table class="table table-cv table-sm table-borderless">
              {% if cv.name %}
                <tr>
                  <td class="p-1 pr-2 font-weight-bold"><b>Name</b></td>
                  <td class="p-1 pl-2 font-weight-light">{{ cv.name }}</td>
                </tr>
              {% endif %}
              {% if cv.location %}
                <tr>
                  <td class="p-1 pr-2 font-weight-bold"><b>Location</b></td>
                  <td class="p-1 pl-2 font-weight-light">{{ cv.location }}</td>
                </tr>
              {% endif %}
              {% if cv.email %}
                <tr>
                  <td class="p-1 pr-2 font-weight-bold"><b>Email</b></td>
                  <td class="p-1 pl-2 font-weight-light">{{ cv.email }}</td>
                </tr>
              {% endif %}
              {% if cv.website %}
                <tr>
                  <td class="p-1 pr-2 font-weight-bold"><b>Website</b></td>
                  <td class="p-1 pl-2 font-weight-light"><a href="{{ cv.website }}" target="_blank">{{ cv.website }}</a></td>
                </tr>
              {% endif %}
            </table>
          </div>
        {% endif %}

        <!-- Sections -->
        {% for section_pair in cv.sections %}
          {% assign section_title = section_pair[0] %}
          {% assign section_entries = section_pair[1] %}
          
          <a class="anchor" id="{{ section_title | slugify }}"></a>
          <div class="card mt-3 p-3">
            <h3 class="card-title font-weight-medium">{{ section_title }}</h3>
            <div>
              {% for entry in section_entries %}
                {% if entry.bullet %}
                  <!-- BulletEntry -->
                  <ul class="card-text font-weight-light list-group list-group-flush">
                    <li class="list-group-item">{{ entry.bullet | markdownify | remove: '<p>' | remove: '</p>' }}</li>
                  </ul>
                {% elsif entry.label %}
                  <!-- OneLineEntry -->
                  <div class="card-text font-weight-light">
                    <strong>{{ entry.label }}:</strong> {{ entry.details }}
                  </div>
                {% elsif entry.institution %}
                  <!-- EducationEntry -->
                  <ul class="card-text font-weight-light list-group list-group-flush">
                    <li class="list-group-item">
                      <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-3 text-left">
                          {% if entry.start_date or entry.end_date %}
                            <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle">
                              {% if entry.start_date %}{{ entry.start_date }}{% endif %}
                              {% if entry.start_date and entry.end_date %} - {% endif %}
                              {% if entry.end_date %}{{ entry.end_date }}{% endif %}
                            </span>
                          {% endif %}
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-9">
                          <h6 class="title font-weight-bold">
                            {% if entry.degree %}{{ entry.degree }} in {% endif %}{{ entry.area | default: '' }}
                          </h6>
                          <p class="institution"><strong>{{ entry.institution }}</strong>
                            {% if entry.location %}<br><i class="fa-solid fa-location-dot"></i> {{ entry.location }}{% endif %}
                          </p>
                          {% if entry.highlights %}
                            <ul class="items">
                              {% for highlight in entry.highlights %}
                                <li><span class="item">{{ highlight | markdownify | remove: '<p>' | remove: '</p>' }}</span></li>
                              {% endfor %}
                            </ul>
                          {% endif %}
                        </div>
                      </div>
                    </li>
                  </ul>
                {% elsif entry.company %}
                  <!-- ExperienceEntry -->
                  <ul class="card-text font-weight-light list-group list-group-flush">
                    <li class="list-group-item">
                      <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-3 text-left">
                          {% if entry.start_date or entry.end_date %}
                            <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle">
                              {% if entry.start_date %}{{ entry.start_date }}{% endif %}
                              {% if entry.start_date and entry.end_date %} - {% endif %}
                              {% if entry.end_date %}{{ entry.end_date }}{% endif %}
                            </span>
                          {% endif %}
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-9">
                          <h6 class="title font-weight-bold">{{ entry.position }}</h6>
                          <p class="institution"><strong>{{ entry.company }}</strong>
                            {% if entry.location %}<br><i class="fa-solid fa-location-dot"></i> {{ entry.location }}{% endif %}
                          </p>
                          {% if entry.summary %}
                            <div class="ml-1 ml-md-4">{{ entry.summary | markdownify | remove: '<p>' | remove: '</p>' }}</div>
                          {% endif %}
                          {% if entry.highlights %}
                            <ul class="items">
                              {% for highlight in entry.highlights %}
                                <li><span class="item">{{ highlight | markdownify | remove: '<p>' | remove: '</p>' }}</span></li>
                              {% endfor %}
                            </ul>
                          {% endif %}
                        </div>
                      </div>
                    </li>
                  </ul>
                {% elsif entry.name %}
                  <!-- NormalEntry -->
                  <ul class="card-text font-weight-light list-group list-group-flush">
                    <li class="list-group-item">
                      <h6 class="title font-weight-bold">{{ entry.name }}</h6>
                      {% if entry.start_date or entry.end_date %}
                        <small>
                          {% if entry.start_date %}{{ entry.start_date }}{% endif %}
                          {% if entry.start_date and entry.end_date %} - {% endif %}
                          {% if entry.end_date %}{{ entry.end_date }}{% endif %}
                        </small>
                      {% endif %}
                      {% if entry.summary %}
                        <p>{{ entry.summary | markdownify | remove: '<p>' | remove: '</p>' }}</p>
                      {% endif %}
                      {% if entry.highlights %}
                        <ul class="items">
                          {% for highlight in entry.highlights %}
                            <li><span class="item">{{ highlight | markdownify | remove: '<p>' | remove: '</p>' }}</span></li>
                          {% endfor %}
                        </ul>
                      {% endif %}
                    </li>
                  </ul>
                {% else %}
                  <!-- Fallback for text entries -->
                  {% if entry %}
                    <ul class="card-text font-weight-light list-group list-group-flush">
                      <li class="list-group-item">{{ entry | inspect }}</li>
                    </ul>
                  {% endif %}
                {% endif %}
              {% endfor %}
            </div>
          </div>
        {% endfor %}
      </div>
    </article>
  </div>
{% elsif site.data.resume %}
  <div class="post">
    <header class="post-header">
      <h1 class="post-title">
        {{ page.title }}
        {% if page.cv_pdf %}
          <a
            {% if page.cv_pdf contains '://' %}
              href="{{ page.cv_pdf }}"
            {% else %}
              href="{{ page.cv_pdf | relative_url }}"
            {% endif %}
            target="_blank"
            rel="noopener noreferrer"
            class="float-right"
          >
            <i class="fa-solid fa-file-pdf"></i>
          </a>
        {% endif %}
      </h1>
      {% if page.description %}
        <p class="post-description">{{ page.description }}</p>
      {% endif %}
    </header>

    <article>
      <div class="cv">
        {% for data in site.data.resume %}
          {% if site.jsonresume and site.jsonresume.size > 0 %}
            {% unless site.jsonresume contains data[0] %}
              {% continue %}
            {% endunless %}
          {% endif %}
          {% if data[0] == 'meta' or data[1].size == 0 %} {% continue %} {% endif %}
          <a class="anchor" id="{{ data[0] }}"></a>
          <div class="card mt-3 p-3">
            <h3 class="card-title font-weight-medium">{{ data[0] | capitalize }}</h3>
            <div>
              {% case data[0] %}
                {% when 'basics' %}
                  {% include resume/basics.liquid %}
                {% when 'education' %}
                  {% include resume/education.liquid %}
                {% when 'work' %}
                  {% include resume/work.liquid %}
                {% when 'volunteer' %}
                  {% include resume/volunteer.liquid %}
                {% when 'projects' %}
                  {% include resume/projects.liquid %}
                {% when 'awards' %}
                  {% include resume/awards.liquid %}
                {% when 'skills' %}
                  {% include resume/skills.liquid %}
                {% when 'publications' %}
                  {% include resume/publications.liquid %}
                {% when 'languages' %}
                  {% include resume/languages.liquid %}
                {% when 'interests' %}
                  {% include resume/interests.liquid %}
                {% when 'certificates' %}
                  {% include resume/certificates.liquid %}
                {% when 'references' %}
                  {% include resume/references.liquid %}
                {% else %}

              {% endcase %}
            </div>
          </div>
        {% endfor %}
      </div>
    </article>
  </div>
{% endif %}
