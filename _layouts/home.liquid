---
layout: default
---

<!-- Custom Hero Section -->
<style>
  /* These CSS rules only apply to the hero section */
  .hero {
    position: relative;
    width: 100%;
    overflow: hidden;
    margin-bottom: 20px; /* adjust spacing as needed */
  }
  .hero img {
    width: 100%;
    display: block;
    height: auto;
  }
  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    padding: 20px;
    background: rgba(0, 0, 0, 0.4); /* semi-transparent overlay */
    text-align: left;
  }
  /* Let your base fonts be defined in your main CSS but force white color here */
  .hero-overlay h1 {
    margin: 0;
    color: white;
  }
</style>

<header class="hero">
  <img id="hero-image" src="" alt="Hero Image" />
  <div class="hero-overlay">
    <!-- Use page.subtitle so the title overlay text is what you want -->
    <h1 class="hero-title">{{ page.subtitle }}</h1>
  </div>
</header>

<!-- Begin Original Content -->
<div class="post">

  <article>
    {% if page.profile %}
      <div class="profile float-{% if page.profile.align == 'left' %}left{% else %}right{% endif %}">
        {% if page.profile.image %}
          {% assign profile_image_path = page.profile.image | prepend: 'assets/img/' %}
          {% if page.profile.image_circular %}
            {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
          {% else %}
            {% assign profile_image_class = 'img-fluid z-depth-1 rounded' %}
          {% endif %}
          {% capture sizes %}(min-width: {{ site.max_width }}) {{ site.max_width | minus: 30 | times: 0.3 }}px, (min-width: 576px) 30vw, 95vw{% endcapture %}
          {% include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=page.profile.image cache_bust=true %}
        {% endif %}
        {% if page.profile.more_info %}
          <div class="more-info">{{ page.profile.more_info }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="clearfix">{{ content }}</div>

    <!-- News Section -->
    {% if page.announcements and page.announcements.enabled %}
      <h2>
        <a href="{{ '/news/' | relative_url }}" style="color: inherit">news</a>
      </h2>
      {% include news.liquid limit=page.announcements.limit %}
    {% endif %}

    <!-- Selected Publications -->
    {% if page.selected_papers %}
      <h2>
        <a href="{{ '/publications/' | relative_url }}" style="color: inherit">selected publications</a>
      </h2>
      {% include selected_papers.liquid %}
    {% endif %}

    <!-- Social Section -->
    {% if page.social %}
      <div class="social">
        <div class="contact-icons">{% include social.liquid %}</div>
        <div class="contact-note">{{ site.contact_note }}</div>
      </div>
    {% endif %}

    {% if site.newsletter and site.newsletter.enabled and site.footer_fixed %}
      {% include newsletter.liquid center=true %}
    {% endif %}
  </article>
</div>
<!-- End Original Content -->

<!-- JavaScript to randomly select the hero image on each page load -->
<script>
document.addEventListener("DOMContentLoaded", function() {
  var heroImages = [
    '/assets/img/homepage/_LJL0236-1400.webp',
    '/assets/img/homepage/_LJL0368-Edit-1400.webp',
    '/assets/img/homepage/_LJL1465-1400.webp',
    '/assets/img/homepage/_LJL2368-Edit-1400.webp',
    '/assets/img/homepage/_LJL4310-1400.webp',
    '/assets/img/homepage/_LJL7635-3-1400.webp',
    '/assets/img/homepage/evl00-1400.webp',
    '/assets/img/homepage/evl01-1400.webp',
    '/assets/img/homepage/IMG_1407-1400.webp',
  ];
  var randomIndex = Math.floor(Math.random() * heroImages.length);
  document.getElementById("hero-image").src = heroImages[randomIndex];
});
</script>
