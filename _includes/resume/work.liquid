<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign work = data[1] | sort: 'startDate' | reverse %}
  {% for content in work %}
    <li class="list-group-item">
      {% include resume/headline.liquid content=content head=content.name showDuration=true %}
      <div class="row">
        <div class="col-xs-3 cl-sm-3 col-md-3 text-center date-column">
          <table class="table-cv">
            <tbody>
              {% if content.location %}
                <tr>
                  <td>
                    <p class="location">
                      <i class="fa-solid fa-location-dot iconlocation"></i>
                      {{ content.location }}
                    </p>
                  </td>
                </tr>
              {% endif %}
              {% if content.highlights %}
                <tr>
                  <td>
                    <ul class="cv-skills" style="font-size: 0.75rem; font-weight: bold;">
                      {% for item in content.highlights %}
                        <li>
                          <span class="item">{{ item }}</span>
                        </li>
                      {% endfor %}
                    </ul>
                  </td>
                </tr>
              {% endif %}
            </tbody>
          </table>
        </div>
        <div class="col-xs-9 cl-sm-9 col-md-9 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4" style="display: flex; align-items: center; gap: 0.5rem;">
            <a href="{{ content.url }}">{{ content.position }}</a>
          </h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem; font-style: italic">{{ content.summary | replace: '\n', '<br />' | newline_to_br }}</h6>
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
