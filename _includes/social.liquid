<ul class="social-links">
  {% for social in site.data.socials %}
    {% case social[0] %}
      {% when 'telegram_username' %}
        <li><a href="https://telegram.me/{{ site.telegram_username }}" title="Telegram"><i class="fa-brands fa-telegram"></i></a></li>

      {% when 'whatsapp_number' %}
        <li><a href="https://wa.me/{{ site.whatsapp_number }}" title="WhatsApp"><i class="fa-brands fa-whatsapp"></i></a></li>

      {% when 'orcid_id' %}
        <li><a href="https://orcid.org/{{ site.orcid_id }}" title="ORCID"><i class="ai ai-orcid"></i></a></li>

      {% when 'scholar_userid' %}
        <li><a href="https://scholar.google.com/citations?user={{ site.scholar_userid }}" title="Google Scholar"><i class="ai ai-google-scholar"></i></a></li>

      {% when 'semanticscholar_id' %}
        <li><a href="https://www.semanticscholar.org/author/{{ site.semanticscholar_id }}" title="Semantic Scholar"><i class="ai ai-semantic-scholar"></i></a></li>

      {% when 'publons_id' %}
        <li><a href="https://publons.com/a/{{ site.publons_id }}/" title="Publons"><i class="ai ai-publons"></i></a></li>

      {% when 'lattes_id' %}
        <li><a href="http://lattes.cnpq.br/{{ site.lattes_id }}" target="_blank" title="Lattes"><i class="ai ai-lattes"></i></a></li>

      {% when 'osf_id' %}
        <li><a href="https://osf.io/{{ site.osf_id }}/" title="Open Science Framework"><i class="ai ai-osf"></i></a></li>

      {% when 'research_gate_profile' %}
        <li><a href="https://www.researchgate.net/profile/{{ site.research_gate_profile }}/" title="ResearchGate"><i class="ai ai-researchgate"></i></a></li>

      {% when 'scopus_id' %}
        <li><a href="https://www.scopus.com/authid/detail.uri?authorId={{ site.scopus_id }}" title="Scopus"><i class="ai ai-scopus"></i></a></li>

      {% when 'github_username' %}
        <li><a href="https://github.com/{{ site.github_username }}" title="GitHub"><i class="fa-brands fa-github"></i></a></li>

      {% when 'linkedin_username' %}
        <li><a href="https://www.linkedin.com/in/{{ site.linkedin_username }}" title="LinkedIn"><i class="fa-brands fa-linkedin"></i></a></li>

      {% when 'x_username' %}
        <li><a href="https://twitter.com/{{ site.x_username }}" title="X"><i class="fa-brands fa-x-twitter"></i></a></li>

      {% when 'mastodon_username' %}
        <li><a rel="me" href="https://{{ site.mastodon_username }}" title="Mastodon"><i class="fa-brands fa-mastodon"></i></a></li>

      {% when 'medium_username' %}
        <li><a href="https://medium.com/@{{ site.medium_username }}" title="Medium"><i class="fa-brands fa-medium"></i></a></li>

      {% when 'quora_username' %}
        <li><a href="https://www.quora.com/profile/{{ site.quora_username }}" title="Quora"><i class="fa-brands fa-quora"></i></a></li>

      {% when 'blogger_url' %}
        <li><a href="{{ site.blogger_url }}" title="Blogger"><i class="fa-brands fa-blogger-b"></i></a></li>
      
      {% when 'bluesky_url' %}
        <li><a href="{{ social[1] }}" title="Bluesky"><i class="fa-brands fa-bluesky"></i></a></li>

      {% when 'work_url' %}
        <li><a href="{{ site.work_url }}" title="Work"><i class="fa-solid fa-briefcase"></i></a></li>

      {% when 'wikidata_id' %}
        <li><a href="https://www.wikidata.org/wiki/{{ site.wikidata_id }}" title="Wikidata"><i class="fa-solid fa-barcode"></i></a></li>

      {% when 'wikipedia_id' %}
        <li><a href="https://wikipedia.org/wiki/User:{{ site.wikipedia_id }}" title="Wikipedia"><i class="fa-brands fa-wikipedia-w"></i></a></li>

      {% when 'strava_userid' %}
        <li><a href="https://www.strava.com/athletes/{{ site.strava_userid }}" title="Strava"><i class="fa-brands fa-strava"></i></a></li>

      {% when 'keybase_username' %}
        <li><a href="https://keybase.io/{{ site.keybase_username }}" title="Keybase"><i class="fa-brands fa-keybase"></i></a></li>

      {% when 'gitlab_username' %}
        <li><a href="https://gitlab.com/{{ site.gitlab_username }}" title="GitLab"><i class="fa-brands fa-gitlab"></i></a></li>

      {% when 'dblp_url' %}
        <li><a href="{{ site.dblp_url }}" title="DBLP"><i class="ai ai-dblp"></i></a></li>

      {% when 'stackoverflow_id' %}
        <li><a href="https://stackoverflow.com/users/{{ site.stackoverflow_id }}" title="Stack Overflow"><i class="fa-brands fa-stack-overflow"></i></a></li>

      {% when 'kaggle_id' %}
        <li><a href="https://www.kaggle.com/{{ site.kaggle_id }}" title="Kaggle"><i class="fa-brands fa-kaggle"></i></a></li>

      {% when 'lastfm_id' %}
        <li><a href="https://www.last.fm/user/{{ site.lastfm_id }}" title="Last.fm"><i class="fa-brands fa-lastfm"></i></a></li>

      {% when 'spotify_id' %}
        <li><a href="https://open.spotify.com/user/{{ site.spotify_id }}" title="Spotify"><i class="fa-brands fa-spotify"></i></a></li>

      {% when 'pinterest_id' %}
        <li><a href="https://www.pinterest.com/{{ site.pinterest_id }}" title="Pinterest"><i class="fa-brands fa-pinterest"></i></a></li>

      {% when 'unsplash_id' %}
        <li><a href="https://unsplash.com/@{{ site.unsplash_id }}" title="Unsplash"><i class="fa-brands fa-unsplash"></i></a></li>

      {% when 'instagram_id' %}
        <li><a href="https://instagram.com/{{ site.instagram_id }}" title="Instagram"><i class="fa-brands fa-instagram"></i></a></li>

      {% when 'facebook_id' %}
        <li><a href="https://facebook.com/{{ site.facebook_id }}" title="Facebook"><i class="fa-brands fa-facebook"></i></a></li>

      {% when 'youtube_id' %}
        <li><a href="https://youtube.com/@{{ site.youtube_id }}" title="YouTube"><i class="fa-brands fa-youtube"></i></a></li>

      {% when 'discord_id' %}
        <li><a href="https://discord.com/users/{{ site.discord_id }}" title="Discord"><i class="fa-brands fa-discord"></i></a></li>

      {% when 'zotero_username' %}
        <li><a href="https://www.zotero.org/{{ site.zotero_username }}" title="Zotero"><i class="ai ai-zotero"></i></a></li>

      {% when 'rss_icon' %}
        <li><a href="{{ site.baseurl }}/feed.xml" title="RSS Feed"><i class="fa-solid fa-square-rss"></i></a></li>

      {% when 'wechat_qr' %}
        <li>
          <a id="WeChatBtn" title="WeChat"><i class="fa-brands fa-weixin"></i></a>
          <div id="WeChatMod" class="wechat-modal">
            <img src="{{ site.wechat_qr | prepend: 'assets/img/' | relative_url }}" alt="WeChat QR" id="WeChatQR">
          </div>
          {% include scripts/wechatModal.liquid %}
        </li>

      {% else %}
        {% if !(socia[1].url contains '@') %}
          <li>
            {{ social[1] }}
            <a href="{{ social[1].url }}" title="{{ social[1].title }}">
              {% assign file_ext = social[1].logo | split: '.' | last %}
              {% if file_ext == 'svg' %}
                <svg>
                  <image xlink:href="{% if social[1].logo contains '://' %}{{ social[1].logo }}{% else %}{{ social[1].logo | relative_url }}{% endif %}" />
                </svg>
              {% else %}
                <img
                  src="{% if social[1].logo contains '://' %}{{ social[1].logo }}{% else %}{{ social[1].logo | relative_url }}{% endif %}"
                  alt="{{ social[1].title }}"
                >
              {% endif %}
            </a>
          </li>
        {% endif %}
    {% endcase %}
  {% endfor %}
</ul>
